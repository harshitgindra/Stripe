@{
    ViewBag.Title = "Home Page";
}

@using (Html.BeginForm("Login", "Home"))
{
    <table>
        <tr>
            <td>
                Username
            </td>
            <td>
                @Html.TextBox("login_username")
            </td>
        </tr>
        <tr>
            <td>
                Password
            </td>
            <td>
                @Html.TextBox("login_password")
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" value="Login" />
            </td>
        </tr>
    </table>
}


@using (Html.BeginForm("SignUp", "Home"))
{
    <table>
        <tr>
            <td>
                Username
            </td>
            <td>@Html.TextBox("login_username")</td>
        </tr>
        <tr>
            <td>Password</td>
            <td>@Html.TextBox("login_password")</td>
        </tr>
        <tr>
            <td>Confirm Password</td>
            <td>@Html.TextBox("login_confirmPassword")</td>
        </tr>
        <tr>
            <td>User Type</td>
            <td>@Html.DropDownList("User_Type_userType_ID", new SelectList(ViewBag.UserTypeList, "Value", "Text"))</td>
        </tr>
        <tr>
            <td><input type="submit" value="Sign Up" onclick="onSignUp(this);"/></td>
        </tr>
    </table>
}


